block scripts 
    script(src = '/static/script.js')
block style
    style
        include ../static/Website.css

block content
    section#home 
        h3 WELCOME TO BEATBUSTERS DANCE ACADEMY
        p Dance is the hidden language of the Soul
    section#events 
        h3 OUR EVENTS  
        #image 
            div.eventdes
                p Annual Dance Event 2017
                img(src="/static/Image/event1.jpg" alt="Event1")
            div.eventdes
                p Annual Dance Event 2018
                img(src="/static/Image/event3.jpg" alt="Event2")  
            div.eventdes
                p Annual Dance Event 2019
                img(src="/static/Image/event2.jpeg" alt="Event3")  
